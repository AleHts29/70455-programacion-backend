{{#if isValid}}

<div>
    {{#each docs}}
    <div>
        <p>Nombre: {{this.first_name}}</p>
        <p> Apellido: {{this.last_name}}</p>
        <p>Grupo: {{this.group}} &nbsp; Grado: {{this.grade}}</p>
    </div>
    <br />
    {{/each}}
</div>

<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}
            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}
</div>


{{else}}
<h1>no hay informacion para mostrar</h1>
{{/if}}